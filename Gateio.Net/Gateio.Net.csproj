<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <LangVersion>11</LangVersion>
        <Authors>Wim Devos</Authors>
        <Description>Gateio.Net is a .Net wrapper for the Gate.io API</Description>
        <Company>Wim Devos</Company>
        <AssemblyVersion>1.0.0</AssemblyVersion>
        <FileVersion>1.0.0</FileVersion>
        <NeutralLanguage>en</NeutralLanguage>
	<RuntimeIdentifiers>win-x64;osx-x64;linux-x64</RuntimeIdentifiers>
	<TargetFramework>netstandard2.0</TargetFramework>
	<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    </PropertyGroup>

    <ItemGroup>
      <Folder Include="Clients\AccouncementsApi\" />
      <Folder Include="Clients\DeliveryFuturesApi\" />
      <Folder Include="Clients\OptionsApi\" />
      <Folder Include="Converters\" />
      <Folder Include="Icon\" />
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="CryptoExchange.Net" Version="6.1.0" />
    </ItemGroup>

</Project>
